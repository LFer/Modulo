                </form>
            </field>
        </record>
        -->

        <!-- tree view 
        <record model="ir.ui.view" id="prueba_tree_view">
            <field name="name">Vista tree</field>
            <field name="model">prueba.prueba</field>
            <field name="arch" type="xml">
                <tree string="Prueba">
                    <field name="name"/>
